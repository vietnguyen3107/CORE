<script> 
function clearForm(formName, formSuffix){ 
    var form =  jQuery("#" + formName + formSuffix); 
    //clear all message validate error  
    form.validate().resetForm(); 
    //clear all input 
    form.find(':input').each(function() { 
        switch(this.type) { 
            case 'password': 
            case 'select-multiple': 
            case 'select-one': 
            case 'text': 
            case 'hidden': 
            case 'textarea': 
            jQuery(this).val(''); 
            break; 
            case 'checkbox': 
            case 'radio': 
            this.checked = false; 
        } 
    }); 
   //clear all background of table row 
    //jQuery("tr").css('background-color', '#FFFFFF'); 
    //clear all check box 
    jQuery(".delete").prop('checked',false); 
} 
function addObj(formName){ 
    var form =  jQuery("#" + formName + "AddForm"); 
    if(!form.validate().form()) { 
        return false;	 
    } 
    var dataString = form.serialize(); 
    var url = formName + "Insert.action"; 
    form.prop("action",url); 
    form.submit(); 
} 
function htmlBox(itemId){ 
    if(jQuery("#"+ itemId).length > 0){ 
        new Ext.form.HtmlEditor({ 
                id:itemId , 
                applyTo:itemId, 
                width: 500, 
                height: 100, 
                enableAlignments:true, 
                enableSourceEdit:true, 
                enableLists:true 
        }); 
    } 
} 
function datepicker(){ 
    jQuery(".date").datepicker({	 
        changeMonth: true, 
        changeYear: true, 
        yearRange: '1900:c+10', 
        howButtonPanel: true, 
        dateFormat : 'dd/mm/yy' 
    }); 
} 
jQuery(function() { 
    //textarea : wysiwyg 
    htmlBox("tblQLDTHTMLReportTextarea"); 
    datepicker(); 
}); 
</script> 

