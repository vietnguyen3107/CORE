<script> 
function editObj(formName){ 
    var form =  jQuery("#" + formName + "EditForm"); 
    if(!form.validate().form()) { 
        return false;		 
    } 
    var dataString = form.serialize(); 
    var url = formName + "Update.action"; 
   mask(''); 
    jQuery.ajax({ 
        type: "POST", 
        url: url, 
        data: dataString, 
        success: function(response) { 
        unmask(''); 
           try{ 
	            var obj = jQuery.parseJSON(response); 
	            Ext.example.msg(obj.code,obj.msg);  
           }catch(error){ 
                Ext.example.msg('Done', 'Successfull!'); 
           } 
        } 
    }); 
} 
function htmlBox(itemId){ 
    if(jQuery("#"+ itemId).length > 0){ 
        new Ext.form.HtmlEditor({ 
                id:itemId , 
                applyTo:itemId, 
                width: 500, 
                height: 100, 
                enableAlignments:true, 
                enableSourceEdit:true, 
                enableLists:true 
        }); 
    } 
} 
function datepicker(){ 
    jQuery(".date").datepicker({	 
        changeMonth: true, 
        changeYear: true, 
        yearRange: '1900:c+10', 
        howButtonPanel: true, 
        dateFormat : 'dd/mm/yy' 
    }); 
} 
jQuery(function() { 
    //textarea : wysiwyg 
    htmlBox("tblDonViTextarea"); 
    datepicker(); 
 
}); 
</script> 

